import java.io.*;
import java.util.Scanner;

public FileCreator
{
  public static void OpenFile(String[] args)
  {
    File file;               //for file input
    Scanner inputFile;      //for file input
    Scanner SC = new Scanner(System.in);
    String fileName;        //to hold fileNmae
    int n= 0;
    boolean confirmName = true;
    
    while(confirmName= true)
    {
      System.out.println("PLease enter the name of the file you wish to create");
      fileName= SC.nextLine();
      System.out.println(fileName +" is the name you choose");
      System.out.println("Do you wish to set this name\n1.Yes\n2.No");
      n =SC.nextInt();
      if(n==1)
      {
        confirmName =false;
      }//end of if n = yes/1
    }//end of while ConfirmName = true
    try
    {
      file =new File(fileName);
      inputFile = new Scanner(file);
      System.out.println("The File was found.");
    }//end of try
    catch (fileNotFoundException e)
    {
      System.out.println("File not Found.");
    }//end of catch filenotfoundException
  System.out.println("Done");
  System.exit(0);  
  }//end of  public static void OpenFile
}//end of public FileCreator
